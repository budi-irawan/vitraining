<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_session" model="ir.actions.report">
            <field name="name">Session</field>
            <field name="model">vit.session</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">academic2.vit_session_report</field>
            <field name="report_file">academic2.vit_session_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="academic2.model_vit_session"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="academic2.vit_session_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Session: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Description</strong>
                            <p class="m-0" t-field="doc.description" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Start Date</strong>
                            <p class="m-0" t-field="doc.start_date" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Duration</strong>
                            <p class="m-0" t-field="doc.duration" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Course</strong>
                            <p class="m-0" t-field="doc.course_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="academic2.vit_session_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="academic2.vit_session_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>