<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_user_tree" model="ir.ui.view">
            <field name="name">vit_user_tree</field>
            <field name="model">vit.user</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="User">
                    <field name="Attribute1" /> <!-- 100-->
                </tree>
            </field>
        </record>
        <!-- pivot view -->
        <record id="view_vit_user_pivot" model="ir.ui.view">
            <field name="name">vit_user_tree</field>
            <field name="model">vit.user</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="User">
                </pivot>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_user_form" model="ir.ui.view">
            <field name="name">vit_user_form</field>
            <field name="model">vit.user</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="User">
                    <header>
                        <button string="Reload" type="object" name="action_reload" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="User Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="Attribute1"  />
                            </group>
                            <group> <!-- right -->
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_user_search" model="ir.ui.view">
            <field name="name">vit_user</field>
            <field name="model">vit.user</field>
            <field name="arch" type="xml">
                <search string="User">

                    <filter string="Attribute1" name="filter_by_Attribute1" domain="[('Attribute1','=','')]" />
                    <field name="Attribute1" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_vit_user_kanban" model="ir.ui.view" >
            <field name="name">vit_user</field>
            <field name="model">vit.user</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="Attribute1" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_user_graph" model="ir.ui.view">
            <field name="name">vit_user</field>
            <field name="model">vit.user</field>
            <field name="arch" type="xml">
                <graph string="User" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_user" model="ir.actions.act_window">
            <field name="name">User</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.user</field>
            <field name="view_mode">tree,form,kanban,pivot</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new User
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_user" name="User" parent="academic2_config_menu" action="action_user" sequence="30"/>
    </data>
</odoo>