<odoo>
    <data>
        <record id="pos_order_view_form" model="ir.ui.view">
            <field name="name">pos_order_view_form</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@class='row mt16 o_settings_container'][2]//div[@class='col-12 col-lg-6 o_setting_box'][3]" position="after">
                    <div class="col-12 col-lg-6 o_setting_box" id="disable_refund_button">
                        <div class="o_setting_left_pane">
                            <field name="disable_refund_button"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="disable_refund_button" string="Refund Button"/>
                            <div class="text-muted mb16">
                                Pilih ini jika ingin mengaktifkan tombol refund
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>